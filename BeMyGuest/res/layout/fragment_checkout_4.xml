<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgm_background" >

    <!-- Custom Action Bar -->

    <include
        android:id="@+id/custom_actionbar"
        layout="@layout/custom_actionbar" />

    <!-- Billing Information -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_button"
        android:layout_below="@+id/custom_actionbar"
        android:layout_marginLeft="@dimen/margin_mini"
        android:layout_marginRight="@dimen/margin_mini"
        android:layout_marginTop="@dimen/margin_mini"
        android:background="@color/white"
        android:orientation="vertical" >

        <include
            android:id="@+id/ticket_number"
            layout="@layout/checkout_process_title" />

	    <include
	        android:id="@+id/item_male"
	        layout="@layout/overview_item" />
	
	    <include
	        android:id="@+id/item_female"
	        layout="@layout/overview_item" />

	    <include
	        android:id="@+id/item_price"
	        layout="@layout/overview_item" />

	    <include
	        android:id="@+id/item_subtotal"
	        layout="@layout/overview_item" />
	
	    <include
	        android:id="@+id/item_tax"
	        layout="@layout/overview_item" />

	    <include
	        android:id="@+id/item_total"
	        layout="@layout/overview_item" />
	    	
    </LinearLayout>

    <!-- Bottom Button -->

    <include
        android:id="@+id/bottom_button"
        layout="@layout/bottom_button" />

</RelativeLayout>