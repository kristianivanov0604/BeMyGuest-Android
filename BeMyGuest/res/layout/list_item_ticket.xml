<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_normal"
    android:layout_marginBottom="@dimen/margin_normal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mini"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ticket_id_bg"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/padding_mini"
            android:paddingRight="@dimen/padding_mini"
            android:text="@string/TICKET"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mini" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_mini"
            android:text="@string/Male_3_Lot"
            android:textColor="@color/bgm_pink"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <include
        android:id="@+id/et_name"
        layout="@layout/custom_edittext" />

    <include
        android:id="@+id/et_rg_cpf"
        layout="@layout/custom_edittext" />
    
</LinearLayout>